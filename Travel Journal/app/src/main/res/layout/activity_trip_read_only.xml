<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripReadOnlyActivity">

    <EditText
        android:id="@+id/TripNameEditTextReadOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Trip Name"
        android:inputType="text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <EditText
        android:id="@+id/DestinationEditTextReadOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Destination"
        android:inputType="text"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TripNameEditTextReadOnly" />

    <RadioGroup
        android:id="@+id/radioGroupReadOnly"
        android:layout_width="117dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05">

        <RadioButton
            android:id="@+id/cityBreakRadioButtonReadOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City Break" />

        <RadioButton
            android:id="@+id/seaSideRadioButtonReadOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sea Side" />

        <RadioButton
            android:id="@+id/mountainsRadioButtonReadOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mountains" />
    </RadioGroup>

    <TextView
        android:id="@+id/StartDateTextViewReadOnly"
        android:layout_width="94dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="End Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/endDateButtonReadOnly"
        app:layout_constraintTop_toBottomOf="@+id/EndDateTextViewReadOnly"
        app:layout_constraintVertical_bias="0.073" />

    <TextView
        android:id="@+id/EndDateTextViewReadOnly"
        android:layout_width="94dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="248dp"
        android:gravity="center"
        android:text="Start Date"
        app:layout_constraintStart_toEndOf="@+id/startDateButtonReadOnly"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBarEditTripReadOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <ImageButton
        android:id="@+id/startDateButtonReadOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="248dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_calendar_month_24" />

    <ImageButton
        android:id="@+id/endDateButtonReadOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDateButtonReadOnly"
        app:srcCompat="@drawable/baseline_calendar_month_24" />

    <SeekBar
        android:id="@+id/priceRangeBarReadOnly"
        android:layout_width="219dp"
        android:layout_height="42dp"
        android:layout_marginTop="424dp"
        android:max="10000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTripViewReadOnly"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="136dp"
        android:visibility="invisible"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceRangeBarReadOnly" />

    <TextView
        android:id="@+id/weatherInformationReadOnly"
        android:layout_width="165dp"
        android:layout_height="59dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceRangeBarReadOnly"
        app:layout_constraintVertical_bias="0.537" />

    <CheckBox
        android:id="@+id/checkBoxReadOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="Favourite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844" />

</androidx.constraintlayout.widget.ConstraintLayout>